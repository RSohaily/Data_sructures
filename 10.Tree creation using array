10.Tree creation using array.

#include <stdio.h>

#define MAX 100

int tree[MAX];

void createTree() {
    for (int i = 0; i < MAX; i++) {
        tree[i] = -1;
    }
    tree[0] = 1;
    tree[1] = 2;
    tree[2] = 3;
    tree[3] = 4;
    tree[4] = 5;
    tree[5] = 6;
    tree[6] = 7;
}

void printTree() {
    for (int i = 0; i < 7; i++) {
        printf("%d ", tree[i]);
    }
    printf("\n");
}

int main() {
    createTree();
    printTree();
    return 0;
}
